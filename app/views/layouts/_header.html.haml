%header.navbar.navbar-fixed-top.navbar-inverse
  .container
    = link_to "sample app", root_path, id: "logo"
    #nav
      #ul.nav.navbar-nav.navbar-right
        %li= link_to "Home", root_path
        %li= link_to "Help", help_path
        - if logged_in?
          %li= link_to "Users", '#'
          %li.dropdown
            %a.btn.dropdown-toggle#my-toggle-button{'href' => '#', 'data-toggle' => 'dropdown', 'type' => 'button', 'data-bs-toggle'=>"dropdown", 'aria-expanded'=>"false"}
              Account
              %b.caret
            %ul.dropdown-menu{'aria-labelledby' => "my-toggle-button"}
              %li.dropdown-item= link_to "Profile", current_user
              %li.dropdown-item= link_to "Settings", '#'
              %li.dropdown-item.divider
              %li.dropdown-item= link_to "Log out", logout_path, method: :delete
        - else
          %li= link_to "Log in", login_path

